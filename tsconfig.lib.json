{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "outDir": "./lib/dist",
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"]
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "tests",
    "Playground",
    "**/__tests__/**/*",
    "**/__stories__/**/*",
    "*.test.ts",
    "*.test.tsx"
  ]
}
